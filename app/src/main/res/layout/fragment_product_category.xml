<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewmodel"
            type="com.katana.ui.viewmodels.CategoryViewModel" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/activity_default_padding"
        tools:context="com.katana.ui.views.ProductCategoryFragment">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/category_name_layout"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:theme="@style/LabelDarkTheme"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/add_category"
            app:layout_constraintTop_toBottomOf="@id/categoriesSpinner">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/katanaTextColor"
                android:hint="@string/category_name"
                android:text="@={viewmodel.categoryName}"/>
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/add_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add"
            app:layout_constraintBottom_toTopOf="@id/categoryList"
            app:layout_constraintLeft_toRightOf="@id/category_name_layout"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintVertical_bias="0.01"
            android:onClick="@{() -> viewmodel.onAddNewCategoryRequested()}"/>

        <ListView
            android:id="@+id/categoryList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/add_category"
            app:productcategories="@{viewmodel.categories}"
            />
    </android.support.constraint.ConstraintLayout>
</layout>

<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- When selected -->
    <item android:state_pressed="true" android:alpha="0.5" android:drawable="@color/translucent"/>
    <item android:state_hovered="true" android:drawable="@color/translucent"/>
    <item android:state_focused="true" android:drawable="@color/translucent"/>
    <!-- When not selected -->
    <item android:drawable="@android:color/white"/>
</selector>